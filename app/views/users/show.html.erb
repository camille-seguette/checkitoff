<h3>My Items</h3>

<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <table class="table table-hover">
          <tbody>
            <tr class='js-items'>
              <% @items.each do |item| %>
                <%= render partial: 'items/item', locals: { item: item } %>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <% if current_user %>
      <div class='new-item'>
        <%= render 'items/form', item: Item.new, user: @user %>
      </div>
    <% end %>
  </div>
</div>
