<%= content_tag :tr, class: "media", id: "item-#{item.id}" do %>
  <div class="media">
    <div class="media-body">
      <td><%= item.name %></td>
      <td><%= link_to "", user_items_path(item), method: :delete, class: 'glyphicon glyphicon-ok', remote: true %></td>
      <td><%= distance_of_time_in_words(Time.now, item.created_at+7.days)%></td>
    </div>
  </div>
<% end %>
